  <div>
    <h2>
      total number
    </h2>
    <input  id="lotto-number" type="numbers" placeholder="place number here">
  </div>
  <div>
    <button id="button" > Generate</button>
  </div>
  <div id="loading-spinner" class="spinner" style="display: none;"></div>

  <div id="lotto-result">
    Result space
    <div>
      <script>
      
      document.getElementById("button").addEventListener("click", function() {
      
      const maxNumber = document.getElementById("lotto-number").value;
      const resultElement = document.getElementById("lotto-result");
      
      
      resultElement.textContent = "The winner is...";

      
      if (maxNumber && maxNumber > 0) {
        
        setTimeout(function() {
          
          const randomNumber = Math.floor(Math.random() * maxNumber) + 1;
          resultElement.textContent = randomNumber;  
        }, 7000); // 10000 milliseconds = 10 seconds
      } else {
        resultElement.textContent = "Invalid input";
      }
        document.getElementById("loading-spinner").style.display = "block";  
setTimeout(function() {
  document.getElementById("loading-spinner").style.display = "none";  
}, 7000);
if (!maxNumber || maxNumber <= 0) {
  resultElement.textContent = "Please enter a valid number greater than 0.";
  return;
}
document.getElementById("button").disabled = true;
setTimeout(function() {
  document.getElementById("button").disabled = false;
}, 10000);  

    });
  </script>
